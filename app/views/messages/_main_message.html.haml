.chat-content
  %ul.chat-messages
    - @messages.each do |message|
      %p.messages{"data-id" => message.id}
      %p.chat-content__users
        = message.user.name
        %span.chat-content__time= message.created_at.strftime("%Y/%m/%d/ %H:%M:%S")
      %p.chat-content__message
        = message.body
      -if message.image?
        = image_tag message.image, size: "300x200"
